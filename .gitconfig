[user]
	name = Fredrik LÃ¶fgren
	email = fr3drik.l@gmail.se
[push]
	default = matching
[color]
	ui = auto
[color "branch"]
	current = green reverse
	local = green
	remote = yellow
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	fb = checkout -b
	glog = log --graph --all --oneline --decorate
	loga = log --oneline --abbrev-commit --all
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --branches
	dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy | less --tabs=4 -RFX; }; f"
	showf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git show --color \"$@\" | diff-so-fancy | less --tabs=4 -RFX; }; f"
[core]
	excludesfile = /Users/fredlofg/.gitignore_global
	editor = nano -w
	# Make `git rebase` safer on macOS
	# More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
	trustctime = false
	# Prevent showing files whose names contain non-ASCII symbols as unversioned.
	# http://michael-kuehnel.de/git/2014/11/21/git-mac-osx-and-german-umlaute.html
	precomposeunicode = false
[rerere]
	enabled = true
[credential]
	helper = osxkeychain
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[includeIf "gitdir:~/Repos/viaplay/"]
    path = ~/Repos/viaplay/.gitconfig
