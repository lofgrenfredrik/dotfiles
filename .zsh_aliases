#!/bin/zsh

# Shell
alias servesimple='python -m SimpleHTTPServer'
alias ports='lsof -Pan -i tcp -i udp'
alias la='ls -a'
alias lsl='ls -l'
alias ll='ls -laF'

alias cleannode='echo "Removing all node_modules recursively" && find . -name "node_modules" -type d -prune -exec rm -rf "{}" +'
alias rmnm='echo "Removing node_modules" && rm -rf node_modules'

# Git
alias gclean='git branch --merged | grep -v "\*" | grep -v master | grep -v develop | xargs -n 1 git branch -d'
alias br='git --no-pager branch'

# Python
# alias python=python3
# alias pip=pip3

# Canary with all flags
alias browsah='open /Applications/Google\ Chrome\ Canary.app --args --disable-web-security --reduce-security-for-testing --allow-running-insecure-content --user-data-dir'export PATH="/usr/local/opt/ruby/bin:$PATH"
